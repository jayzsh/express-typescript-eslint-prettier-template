{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
